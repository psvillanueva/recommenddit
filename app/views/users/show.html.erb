<% @title=("Recommenddit - " + @user_record.username) %>
<div class="container">
<p id="notice"><%= notice %></p>

<h1>User: <%= link_to @user_record.username, ("http://reddit.com/user/" + @user_record.username) %></h1>
<h2>Posts to: <%= @user_record.num_subreddits %> subreddits</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th><h3>Similar Users</h3></th>
      <th><h3>Similarity Score</h3></th>
    </tr>
  </thead>

  <tbody>
  	<% similarity = 0 %>
  	<% @user_record.attributes.each do |key, value| %>
  	  <% if key.to_s.include?("similarity") && value == 0 %>
  	    	<% break %>
  	  <% end %>
  	  <% if key.to_s.include?("similarity") %>
  	  	<% similarity = value %>
  	  <% end %>
  	  <% if key.to_s.include?("similar_user") && value != nil %>
  	  	<tr>
  	  		<td>
  	  			<%= link_to value, ("http://www.reddit.com/user/" + value) %>
  	  		</td>
  	  		<td>
  	  			<%= similarity %>
  	  		</td>
  	  	</tr>
  	  <% end %>
  	<% end %>
  </tbody>
</table>
<br><br>
	
</div>
<br>

